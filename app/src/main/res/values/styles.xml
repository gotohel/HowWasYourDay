<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:fontFamily">@font/koho_regular</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimaryDark">#86AEE8</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimaryDark">#C5B6F0</item>
    </style>

    <style name="AppTheme.Orange">
        <item name="colorPrimaryDark">#ECB3A1</item>
    </style>

</resources>
