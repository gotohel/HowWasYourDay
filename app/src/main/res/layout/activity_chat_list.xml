<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ChatListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_title_height"
        android:background="@drawable/bg_purple_gradation">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="115dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/group"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:onClick="showSubMenu"
                android:layout_width="@dimen/action_bar_size"
                android:layout_height="@dimen/action_bar_size"
                android:layout_gravity="end"
                app:srcCompat="@drawable/ic_menu_white_24dp"
                android:background="?selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/large_title_padding_horizontal"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/koho_semibold"
                android:text="Chats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/large_title_padding_horizontal"
                android:layout_marginTop="6dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Many people\nwill help you!"/>

        </LinearLayout>

    </FrameLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_group_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="242dp"
        android:background="@drawable/bg_main_input">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_group_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="12dp"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>