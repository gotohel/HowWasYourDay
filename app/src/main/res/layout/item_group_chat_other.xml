<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/item_group_chat_padding_vertical"
    android:paddingHorizontal="@dimen/item_group_chat_padding_horizontal"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="12dp"
        android:src="@drawable/circle_blue_gradation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koho_bold"
                android:textSize="17dp"
                android:textColor="@color/blue"
                tools:text="Dora Lee"/>

            <TextView
                android:id="@+id/text_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/koho_bold"
                android:textSize="11dp"
                android:textColor="#888888"
                tools:text="1 hours ago"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_last_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            tools:text="ff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/orange_light"
            android:textSize="12dp"
            android:fontFamily="@font/koho_bold"
            android:text="Need your support!"/>

    </LinearLayout>

</LinearLayout>